.container
  #myCarousel.container.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
    .carousel-inner{:role => "listbox"}
      .item.active
        %img.first-slide{:alt => "First slide", :src => "/animals/header/cute-rhodesian-ridgeback-dog-and-kid-website-header.jpg"}/
        .container
          .carousel-caption
            %h1 Кращі свобаки у твоєму житті
            %p Забавляйся
            %p
              %a.btn.btn-primary{:href => "#", :role => "button"} Глянь
      .item
        %img.second-slide{:alt => "Third slide", :src => "/animals/header/cute-sleepy-kitten-website-header.jpg"}/
        .container
          .carousel-caption
            %h1 Чарівні коти
            %p Ти потребуєш їх
            %p
              %a.btn.btn-primary{:href => "#", :role => "button"} Дізнайся
      .item
        %img.third-slide{:alt => "...", :src => "/animals/header/german-shepherd-dog-and-puppy-website-header.jpg"}/
        .container
          .carousel-caption
            %h1 German shepard
            %p Кращі німецькі вівчарки.
            %p
              %a.btn.btn-primary{:href => "#", :role => "button"} Подивись
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next
      %br

