.row
  .col-lg-8.col-md-8.col-sm-7.col-xs-8
    %div
      - unless @conference.nil? || @conference.id.nil?
        - buttons_class = get_active_button
        %ul.nav.nav-pills{:id => "conference_nav_buttons>"}
          %li#about_button{:class => "#{buttons_class[0]}"}= link_to "About", about_conference_path(@conference.route)
          %li#speakers_button{:class => "#{buttons_class[1]}"}= link_to "Speakers", speakers_conference_path(@conference.route)
          %li#schedule_button{:class => "#{buttons_class[2]}"}= link_to "Schedule", schedule_conference_path(@conference.route)
          - unless(@conference.location.nil?)
            %li#location_button{:class => "#{buttons_class[3]}"}= link_to "Location", location_conference_path(@conference.route)
          - unless(@conference.report.nil?)
            %li#report_button{:class => "#{buttons_class[4]}"}= link_to "Report", report_conference_path(@conference.route)
    .blockquotes-container
      %blockquote.pull-right
        %h4
          It takes all the running you can do, to keep in the same place.
          %br>/
          If you want to get somewhere else, you must run at least twice as fast as that!
        %small Red Queen
  .col-lg-4.col-md-4.col-sm-5.col-xs-4.logo-img
    = image_tag("pacemaker_logo.png")
