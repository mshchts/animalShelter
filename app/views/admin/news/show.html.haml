.container
  .panel.panel-default
    .panel-heading 
      %h3= @news.title
      %p= @news.date
    .thumbnail
      %img= image_tag @news.photo.url
    .panel-body
      %p= @news.text.html_safe
  .col-lg-10.col-lg-offset-2
  = link_to 'Редагувати', edit_admin_news_path(@news)
  \|
  = link_to 'Назад', admin_news_index_path
