= form_for @animal, html: {class: 'form-horizontal'} do |f|
  - if @animal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@animal.errors.count, "error")} prohibited this animal from being saved:"
      %ul
        - @animal.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "Порода*", class: "col-lg-2 control-label"
    .col-lg-5
      = f.text_field :animal_type, class: "form-control"
  .form-group
    = f.label "Ім’я", class: "col-lg-2 control-label"
    .col-lg-5
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label "Стать", class: "col-lg-2 control-label"
    .col-lg-5
      = f.select :sex, [['Будь-яка', "any"],['Самець', "male"],['Самка','female']], {:selected=> 'any'}, class: "col-lg-5 form-control"
  .form-group
    = f.label "Вік", class: "col-lg-2 control-label"
    .col-lg-5
      = f.select :age, [['Будь-який', "any"],['Малюк','baby'],['Молодий', 'young'],['Дорослий','adult'],['Стара','old']], {:selected=> 'any'}, class: "col-lg-5 form-control"
  .form-group
    = f.label "Розмір", class: "col-lg-2 control-label"
    .col-lg-5
      = f.select :size, [['Будь-який', 'any'],['Малий', 'small'],['Середній','medium'],['Великий','big']], {:selected=> 'any'}, class: "col-lg-5 form-control"
  .form-group
    = f.label "Стерилізація", class: "col-lg-2 col-md-1 col-sm-1 col-xs-1 control-label"
    .col-lg-5.col-md-5.col-sm-5.col-xs-5
      = f.check_box :sterile
  .form-group
    = f.label "Опис", class: "col-lg-2 control-label"
    .col-lg-5
      = f.text_area :description, class: "form-control", :rows => "3"
  .actions
  .form-group
    .col-lg-5.col-lg-offset-2
      %button.btn.btn-default{:type => "reset"} Стерти
      = f.submit 'Зберегти', class: "btn btn-primary"